local-hostname: {{ hostname }}
network:
  version: 2
  ethernets:
    nics:
      match:
        name: ens*
      dhcp4: false
      addresses:
        - {{ ip_address }}/24
      gateway4: {{ gateway }}
      nameservers:
        search:
          {% for domain in domains %}
          - {{ domain }}
          {% endfor %}
        addresses:
          {% for server in dns_servers %}
          - {{ server }}
          {% endfor %}